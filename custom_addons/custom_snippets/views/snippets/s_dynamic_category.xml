<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dynamic_category_snippet" name="Dynamic Category">
        <section class="container dynamic_snippet_category">
            <div class="row">
                <div class="col-md-12">
                    <h1>Dynamic Category</h1> Total Products Sold: <span id="total_sold_1" />
                </div>
            </div>
        </section>
    </template>

