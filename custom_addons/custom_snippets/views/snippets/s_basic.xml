    <record id="custom_snippets.s_basic_000_js" model="ir.asset">
        <field name="name">Basic snippet 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">custom_snippets/static/src/snippets/s_basic/000.js</field>
    </record>
</odoo>